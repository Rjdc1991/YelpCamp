<% include ../partials/header %>




<div class="container">
    <header class="jumbotron">
        <div class="container">
            
            <h1 class="header">Campgrounds</h1>
            <p class="header">Come <strong>here</strong> to see, go <strong>there</strong> to explore!</p>
            <a class="btn btn-primary btn-large" href="/campgrounds/new">Add a new campground!</a>
            
    </div>
    </header>

   
            <div class="row text-center" style="display:flex; flex-wrap:wrap;">
                <% campgrounds.forEach(function(camps){ %>
                    <div class="col-md-3 col-sm-6">
                        <div class="thumbnail">
                            <img src = "<%= camps.image %>" style="padding:4px;">
                            <div class="caption">
                                <h4><%= camps.name %></h4>
                            </div>
                            <p>
                            <a href="/campgrounds/<%= camps._id %>" class="btn btn-primary">More Info</a>
                            </p>
                    </div>
                </div>
            <% }); %>
            </div>
        
    

</div>
<% include ../partials/footer %>


