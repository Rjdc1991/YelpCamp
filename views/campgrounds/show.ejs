<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
           
            <div id="map"></div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-fluid" style="max-width:100%; min-width:100%; max-height:500px; min-height:500px" src="<%= campground.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">$<%=campground.price %>/night</h4>
                    <h4><a><%=campground.name%></a></h4>
                    <p><%= campground.description %></p>
                    <p><em>Submitted by:</em><strong><span style="text-transform:capitalize"><%= campground.author.username %></span></strong></p>
                  <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
                   <a class="btn btn-warning" href="/campgrounds/<%=campground._id%>/edit">Edit Post</a>
                        <form id="delete" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete Post</button>
                        </form> 
                        <% } %>
                </div>
            </div>
            <div class="well">
                <div style="padding-bottom:20px">
                    <h4 style="float:left"><strong>Comments</strong></h4>
                    <a class="btn btn-success" style="float:right" href="/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a>
                </div>
                
                <hr>
                <% campground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><span style="text-transform:capitalize"><%= comment.author.username %></span></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %> 
                            </p>
                            <%if(currentUser && comment.author.id.equals(currentUser._id)){%>
                                <a class="btn btn-xs btn-warning" 
                            href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit">
                            Edit</a>
                            <form id="deleteComment" action= "/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
                <a href="/campgrounds">Go back!</a>
            </div>
        </div>
    </div>
</div>
<script>
  function initMap() {
    var lat = <%= campground.lat %>;
    var lng = <%= campground.lng %>;
    var center = {lat: lat, lng: lng };
    var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 8,
        center: center,
        scrollwheel: false
    });
    var contentString = `
      <strong><%= campground.name %><br />
      <%= campground.location %></strong>
      <p><%= campground.description %></p>
    `
    var infowindow = new google.maps.InfoWindow({
      content: contentString
    });
    var marker = new google.maps.Marker({
        position: center,
        map: map
    });
    marker.addListener('click', function() {
      infowindow.open(map, marker);
    });
  }
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD_LDFMFg3s86Plx3ir-L14RUHW4RZiCqY&callback=initMap"></script>

<% include ../partials/footer %>









